<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.hackuapp.Recording">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_mic_black_150px"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="録音"
        android:id="@+id/rec_switch"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="声の登録"
        android:id="@+id/new_button"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/rec_switch"
        android:layout_alignStart="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="声を識別"
        android:id="@+id/check_button"
        android:layout_below="@+id/new_button"
        android:layout_toStartOf="@+id/list_button"
        android:layout_marginTop="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新規作成"
        android:id="@+id/newCard_button"
        android:layout_alignTop="@+id/new_button"
        android:layout_toEndOf="@+id/new_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="照合"
        android:id="@+id/list_button"
        android:layout_alignTop="@+id/check_button"
        android:layout_alignStart="@+id/newCard_button" />

</RelativeLayout>
